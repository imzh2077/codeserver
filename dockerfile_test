# 使用官方 code-server 镜像作为基础镜像
FROM codercom/code-server:latest

# 切换到 root 用户以执行安装命令
USER root

# 更新软件包列表并安装 OpenJDK 17
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openjdk-17-jdk \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# 验证 Java 安装
RUN java -version && javac -version

USER coder
WORKDIR /home/coder

# 设置环境变量
ENV SHELL=/bin/bash
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# 启动code-server
exec code-server --bind-addr=0.0.0.0:8080 .
EOF

RUN chmod +x /home/coder/start.sh

# 使用启动脚本作为入口点
CMD ["/home/coder/start.sh"]
