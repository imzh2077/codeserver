# 使用官方 code-server 镜像作为基础镜像
FROM codercom/code-server:latest

# 切换到 root 用户以执行安装命令
USER root

# 更新软件包列表并安装 OpenJDK 17
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openjdk-17-jdk \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# 验证 Java 安装
RUN java -version && javac -version

USER coder
WORKDIR /home/coder
